{
	"compilerOptions": {
		"target": "ES2024",
		"types": ["node"],
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			//	"shared/src/*": ["./node_modules/shared/src/*"]
		}
	},

	"include": ["src/**/*.ts", "swagger/**/*.json", "webpack.config.js"],
	"exclude": ["node_modules", "dist"]
}
