{
	"compilerOptions": {
		"target": "ES2024",
		"module": "commonjs",
		"rootDir": ".",
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"references": [{ "path": "../shared/" }],

	"include": ["src/**/*.ts", "../shared/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
