{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "composite": true
  },
  "include": ["src/**/*.ts", "dist/**/*.json"],
  "exclude": ["node_modules"]
}
